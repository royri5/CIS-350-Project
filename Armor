public class Armor extends Items {
    private String slot;
    private int defense;


    public Armor() {
        setName("N/A");
        slot = "";
        defense = 0;
    }

    public Armor(String n, String s, int d) {
        setName(n);
        slot = s;
        defense = d;
    }

    public String getSlot() {
        return slot;
    }

    public void setSlot(String s) {
        switch(s) {
            case "Head": slot = s;
            break;
            case "Body": slot = s;
            break;
            case "Legs": slot = s;
            break;
            default: slot = null;
            break;
        } 
    }

    public int getDefense() {
        if(this.equals(null)) {
            return 0;
        } else {
            return defense;
        }
    }

    public void setDefense(int d) {
        if(d >= 0) {
            defense = d;
        } else {
            defense = 0;
        }
    }


    
}
