public class Armor extends Items {
    private String slot;
    private int defense;


    public Armor() {
        setName("N/A");
        slot = "";
        defense = 0;
    }

    public Armor(String name, String s, int def) {
        setName(name);
        setSlot(s);
        setDefense(def);
    }

    public String getSlot() {
        return slot;
    }

    public void setSlot(String s) {
        switch(s) {
            case "Head": slot = s;
            break;
            case "Body": slot = s;
            break;
            case "Legs": slot = s;
            break;
            default: slot = null;
            break;
        } 
    }

    public int getDefense() {
        if(this.equals(null)) {
            return 0;
        } else {
            return defense;
        }
    }

    public void setDefense(int def) {
        if(def >= 0) {
            defense = def;
        } else {
            defense = 0;
        }
    }


    
}
