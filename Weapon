public class Weapon extends Items {
    //Weapon types: Sword, Axe, etc.

    //may not be needed
    private String weaponType;
    private String damage;

    public Weapon() {
        setName("N/A");
        weaponType = "N/A";
        setDamage(null);
    }

    public Weapon(String n, String wT, String d) {
        setName(n);
        weaponType = wT;
        setDamage(d);
    }

    //may not be needed
    public String getWeaponType() {
        return weaponType;
    }

    //^
    public void setWeaponType(String t) {
        weaponType = t;
    }

    public String getDamage() {
        if(this.equals(null)) {
            return null;
        } else {
            return damage;
        }
    }

    public void setDamage(String d) {
        switch(d) {
            case "d4": damage = d; 
            break;
            case "d6": damage = d;
            break;
            case "d8": damage = d;
            break;
            case "d10": damage = d;
            break;
            case "d12": damage = d;
            break;
            default: damage = null;
            break;
        }
    }

}
