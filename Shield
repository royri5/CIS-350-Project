public class Shield extends Items {
    private int defense;

    public Shield() {
        setName("N/A");
        defense = 0;
    }

    public Shield(String n, int d) {
        setName(n);
        setDefense(d);
    }

    public int getDefense() {
        if(this.equals(null)) {
            return 0;
        } else {
            return defense;
        }
    }

    public void setDefense(int d) {
        if(d >= 0) {
            defense = d;
        } else {
            defense = 0;
        }
    }
}
